CACHE_TIMEOUT=300

# Sessões
SESSION_COOKIE_AGE=86400
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# ========================================
# LOGS
# ========================================

LOG_LEVEL=DEBUG
LOG_FILE=logs/django.log

# ========================================
# BACKUP
# ========================================

BACKUP_ENABLED=False
BACKUP_RETENTION_DAYS=7

# ========================================
# MONITORAMENTO
# ========================================

