# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# Sistema de Agendamento - 4Minds
# ========================================
# ⚠️ COPIE PARA .env.production E CONFIGURE COM VALORES REAIS
# ⚠️ NUNCA COMMITE ESTE ARQUIVO APÓS CONFIGURADO

# ========================================
# INSTRUÇÕES IMPORTANTES
# ========================================
# 1. Gere SECRET_KEY seguro:
#    python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
#
# 2. Use senhas FORTES (16+ caracteres, números, símbolos)
#
# 3. Configure App Password do Gmail:
#    https://myaccount.google.com/apppasswords
#
# 4. Após terraform apply, copie os outputs:
#    - RDS endpoint: terraform output rds_endpoint
#    - S3 bucket: terraform output s3_bucket_name
#
# 5. NUNCA commite este arquivo após configurar!

# ========================================
# DJANGO CORE
# ========================================

# SEMPRE False em produção
DEBUG=False

# GERE UMA CHAVE SEGURA (NÃO USE A DE EXEMPLO)
SECRET_KEY=GERE_UMA_CHAVE_SEGURA_DE_50_CARACTERES_COM_O_COMANDO_PYTHON_ACIMA

# Hosts permitidos (seu domínio)
ALLOWED_HOSTS=fourmindstech.com.br,www.fourmindstech.com.br

# Django Settings Module
DJANGO_SETTINGS_MODULE=core.settings_production

# Ambiente
ENVIRONMENT=production

# ========================================
# BANCO DE DADOS RDS (PostgreSQL)
# ========================================
# ⚠️ Após terraform apply, copie o endpoint:
# terraform output rds_endpoint

DB_NAME=agendamentos_db
DB_USER=postgres
DB_PASSWORD=CRIE_SENHA_FORTE_16_CARACTERES_MINIMO_COM_NUMEROS_E_SIMBOLOS
DB_HOST=sistema-agendamento-postgres.xxxxxx.us-east-1.rds.amazonaws.com
DB_PORT=5432

# URL de conexão completa (alternativa)
DATABASE_URL=postgres://postgres:SUA_SENHA@RDS_ENDPOINT:5432/agendamentos_db

# ========================================
# EMAIL (SMTP Gmail)
# ========================================
# ⚠️ Configure App Password: https://myaccount.google.com/apppasswords
# NÃO use sua senha normal do Gmail!

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=fourmindsorg@gmail.com
EMAIL_HOST_PASSWORD=GERE_APP_PASSWORD_DE_16_CARACTERES_NO_GOOGLE_SECURITY
DEFAULT_FROM_EMAIL=Sistema de Agendamentos <noreply@fourmindstech.com.br>

# ========================================
# SEGURANÇA HTTPS/SSL
# ========================================

# Habilitar após configurar SSL (Let's Encrypt)
HTTPS_REDIRECT=True
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ========================================
# AWS
# ========================================
# ⚠️ Após terraform apply:
# terraform output s3_bucket_name

AWS_REGION=us-east-1
S3_BUCKET_NAME=sistema-agendamento-static-files-xxxxxxxx
CLOUDFRONT_DOMAIN=

# ========================================
# SMTP ALTERNATIVO (Opcional)
# ========================================
# Se não usar Gmail, configure outro SMTP

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=fourmindsorg@gmail.com
SMTP_PASSWORD=MESMO_APP_PASSWORD_ACIMA

# ========================================
# API & BANCO
# ========================================
# Asaas API

ASASS_API_KEY=sk_live_xxx
ASASS_BASE_URL=https://www.asaas.com/api
ASASS_WEBHOOK_TOKEN=seu_webhook_token_aqui


# ========================================
# CACHE & PERFORMANCE
# ========================================

CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_TIMEOUT=300

# Sessões
SESSION_COOKIE_AGE=86400
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# ========================================
# LOGS
# ========================================

LOG_LEVEL=INFO
LOG_FILE=/var/log/django/django.log

# ========================================
# BACKUP
# ========================================

BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=7

# ========================================
# MONITORAMENTO
# ========================================

MONITORING_ENABLED=True
HEALTH_CHECK_ENABLED=True

# ========================================
# NOTIFICAÇÕES
# ========================================

NOTIFICATION_EMAIL=fourmindsorg@gmail.com
ALERT_EMAIL=fourmindsorg@gmail.com

# ========================================
# CHECKLIST ANTES DE USAR
# ========================================
# [ ] SECRET_KEY gerado e configurado
# [ ] DB_PASSWORD forte e único
# [ ] EMAIL_HOST_PASSWORD (App Password do Google)
# [ ] DB_HOST atualizado com endpoint do RDS
# [ ] S3_BUCKET_NAME atualizado
# [ ] ALLOWED_HOSTS com domínio correto
# [ ] Arquivo .env.production NÃO commitado no Git
# [ ] Senhas salvas em local seguro (gerenciador de senhas)

# ========================================
# SEGURANÇA ADICIONAL
# ========================================
# - Use senhas de 16+ caracteres
# - Ative 2FA no Google
# - Salve credenciais em gerenciador (LastPass, 1Password, Bitwarden)
# - Rotacione senhas a cada 90 dias
# - Monitore logs de acesso
