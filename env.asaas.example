# Configurações da API Asaas para testes
# Copie este arquivo para .env.asaas e configure com suas credenciais reais

# Chave da API Asaas (obtenha em https://www.asaas.com/api-docs)
ASAAS_API_KEY=sk_test_sua_chave_aqui

# Ambiente: 'sandbox' para testes ou 'production' para produção
ASAAS_ENV=sandbox

# Token para validação de webhooks (opcional)
ASAAS_WEBHOOK_TOKEN=seu_token_webhook_aqui

# Configurações do banco de dados para testes
DB_NAME=agendamentos_db
DB_USER=postgres
DB_PASSWORD=sua_senha_db
DB_HOST=localhost
DB_PORT=5432

# Configurações Django
DEBUG=True
SECRET_KEY=sua_secret_key_aqui

# URLs para testes
SITE_URL=http://localhost:8000
ASAAS_WEBHOOK_URL=http://localhost:8000/financeiro/webhooks/asaas/
