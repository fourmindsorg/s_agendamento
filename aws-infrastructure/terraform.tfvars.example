# Arquivo de exemplo para variáveis do Terraform
# Copie este arquivo para terraform.tfvars e configure os valores

# Região AWS
aws_region = "us-east-1"

# Nome do projeto
project_name = "sistema-agendamento"

# Ambiente
environment = "prod"

# Configurações do banco de dados
db_username = "postgres"
db_password = "senha_segura_postgre"

# Domínio (opcional)
domain_name = ""

# Configurações da instância EC2
instance_type = "t2.micro"

# Configurações do RDS
db_instance_class = "db.t3.micro"
allocated_storage = 20
max_allocated_storage = 100
backup_retention_period = 7
multi_az = false
deletion_protection = false

# Configurações de rede
allowed_cidr_blocks = ["0.0.0.0/0"]

# Configurações de monitoramento
enable_monitoring = true
cpu_threshold = 80
memory_threshold = 80
disk_threshold = 85

# Configurações de segurança
enable_ssl = true
enable_waf = false
enable_cloudfront = false

# Email para notificações
notification_email = "carlosmedeiroscode@gmail.com"

# Tags adicionais
tags = {
  Environment = "production"
  Project     = "sistema-agendamento"
  Owner       = "4Minds"
  CostCenter  = "TI"
}
