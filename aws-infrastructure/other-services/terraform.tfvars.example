# ========================================
# Configurações Terraform - Other Services
# Sistema de Agendamento - 4Minds
# ========================================

# Região AWS
aws_region = "us-east-1"

# Nome do projeto
project_name = "agendamento-4minds"

# Ambiente
environment = "prod"

# RDS - FREE TIER
db_instance_class = "db.t4g.micro"  # FREE TIER: 750 horas/mês (ARM-based)
allocated_storage = 20             # FREE TIER: até 20GB
max_allocated_storage = 20         # FREE TIER: limitado a 20GB

# Backup e disponibilidade
backup_retention_period = 7        # FREE TIER: até 7 dias
multi_az = false                   # Single-AZ para Free Tier
deletion_protection = false

# Monitoramento
enable_monitoring = true
cpu_threshold = 80
memory_threshold = 80
disk_threshold = 85

# Email para alertas
notification_email = "seu_email@gmail.com"

# Database password (configure with your secure password)
db_password = "SUA_SENHA_SEGURA_DO_BANCO_AQUI"

# Tags
tags = {
  Environment = "production"
  Project     = "agendamento-4minds"
  Owner       = "4Minds"
  Domain      = "fourmindstech.com.br"
  FreeTier    = "true"
  ManagedBy   = "Terraform"
}
