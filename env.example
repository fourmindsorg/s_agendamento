# ========================================
# Configurações de Ambiente - Desenvolvimento
# Sistema de Agendamento - 4Minds
# ========================================
# COPIE ESTE ARQUIVO PARA .env E CONFIGURE OS VALORES

# ========================================
# DJANGO CORE
# ========================================

# Modo Debug (apenas para desenvolvimento local)
DEBUG=True

# Secret Key (GERAR NOVA CHAVE)
# Execute: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=GERE_UMA_CHAVE_SEGURA_COM_O_COMANDO_ACIMA

# Hosts permitidos
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Django Settings Module
DJANGO_SETTINGS_MODULE=core.settings

# ========================================
# BANCO DE DADOS (Desenvolvimento Local)
# ========================================

# Use SQLite para desenvolvimento local ou PostgreSQL se preferir
DB_NAME=agendamentos_db
DB_USER=postgres
DB_PASSWORD=SUA_SENHA_POSTGRESQL_LOCAL
DB_HOST=localhost
DB_PORT=5432

# URL de conexão (alternativa)
DATABASE_URL=postgres://postgres:SUA_SENHA@localhost:5432/agendamentos_db

# ========================================
# EMAIL (Desenvolvimento)
# ========================================

# Backend de email (console para dev, smtp para prod)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Configurar App Password do Gmail: https://myaccount.google.com/apppasswords
EMAIL_HOST_USER=seu_email@gmail.com
EMAIL_HOST_PASSWORD=GERE_APP_PASSWORD_NO_GOOGLE

DEFAULT_FROM_EMAIL=Sistema de Agendamentos <noreply@localhost>

# ========================================
# SEGURANÇA (Desenvolvimento)
# ========================================

# HTTPS Redirect (False para desenvolvimento local)
HTTPS_REDIRECT=False
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=False

# ========================================
# CACHE (Desenvolvimento)
# ========================================

CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# ========================================
# LOGS (Desenvolvimento)
# ========================================

LOG_LEVEL=DEBUG
LOG_FILE=logs/django.log

# ========================================
# AWS (Não necessário em desenvolvimento)
# ========================================

AWS_REGION=us-east-1
S3_BUCKET_NAME=
CLOUDFRONT_DOMAIN=

# ========================================
# NOTIFICAÇÕES (Desenvolvimento)
# ========================================

NOTIFICATION_EMAIL=seu_email@gmail.com
ALERT_EMAIL=seu_email@gmail.com

# ========================================
# INSTRUÇÕES
# ========================================
# 1. Copie este arquivo: cp env.example .env
# 2. Gere SECRET_KEY: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 3. Configure suas senhas e emails
# 4. NUNCA commite o arquivo .env no Git
